<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="application" author="application">
        <!-- Прописываем создание таблицы genre-->
        <createTable tableName="application">
            <!--Создаем поля -->
            <column name="application_id" type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="client_id" type="bigint"/>
            <column name="credit_id" type="bigint"/>
            <column name="status" type="varchar"/>
            <column name="creation_date" type="date"/>
            <column name="applied_offer" type="json"/>
            <column name="sign_date" type="date"/>
            <column name="ses_code" type="int"/>
            <column name="status_history" type="json"/>
            <column name="passport" type="json"/>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="client_id"
                                baseTableName="application"
                                constraintName="client_id"
                                referencedColumnNames="client_id"
                                referencedTableName="client"/>
        <addForeignKeyConstraint baseColumnNames="credit_id"
                                 baseTableName="application"
                                 constraintName="credit_id"
                                 referencedColumnNames="credit_id"
                                 referencedTableName="credit"/>
    </changeSet>
</databaseChangeLog>